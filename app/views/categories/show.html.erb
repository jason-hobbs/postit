<p class='pull-right'>[<%= link_to 'edit this category', edit_category_path %>]</p>

<p><%= render 'shared/content_title', title: @category.name %></p>

<% @posts.each do |post| %>
  <div class='row'>
    <div class='span8 well'>
      <p><%= render post.categories %></p>
      <h4><%= link_to post.title, fix_url(post.url) %></h4>
      <p><%= post.description %></p>
      <p>
        <span class='quiet'>posted by</span> <%= post.creator.username %>
        <small>at <%= post.created_at %></small>
      </p>
      <small>
        <span>
          <%= link_to "#{post.comments.size} comments", post_path(post) %>
        </span>
      </small>
    </div>
  </div>
<% end %>
